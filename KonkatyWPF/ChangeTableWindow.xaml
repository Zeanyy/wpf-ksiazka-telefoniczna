<Window x:Class="KonkatyWPF.ChangeTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonkatyWPF"
        mc:Ignorable="d"
        Title="ChangeTableWindow" Height="200" Width="400">
    <Grid>
        <Label Content="Dodaj Baze" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>

        <Label Content="Nazwa:" HorizontalAlignment="Left" Margin="42,53,0,0" VerticalAlignment="Top" FontSize="16" Height="30"/>
        <TextBox x:Name="textBoxName" Margin="108,56,42,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16"/>

        <Label x:Name="errorLabel" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top" FontSize="12" Height="28" Foreground="Red" Width="316"/>

        <Button Content="Dodaj" HorizontalAlignment="Center" VerticalAlignment="Top" Width="316" Height="24" Margin="0,131,0,0" Click="addTable"/>
    </Grid>
</Window>
